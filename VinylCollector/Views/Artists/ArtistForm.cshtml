@model VinylCollector.ViewModels.ArtistFormViewModel
@{
    var title = (Model.Artist == null ? "New Artist" : "Edit Artist");
    ViewBag.Title = title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@title</h2>

@using (Html.BeginForm("Save", "Artists"))
{
    <div class="form-group">
        @Html.LabelFor(a => a.Artist.Name)
        @Html.TextBoxFor(a => a.Artist.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Artist.GenreId)
        @Html.DropDownListFor(a => a.Artist.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>
    @Html.HiddenFor(a => a.Artist.ArtistId)
    <button type="submit" class="btn btn-primary">Save</button>
}

