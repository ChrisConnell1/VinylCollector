@model VinylCollector.Models.Vinyl.Artist

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<div>
    <h4>@Model.Genre.Name</h4>
    <hr />
    <!-- Add table with list of albums associated with this ArtistId -->
</div>

@foreach (var album in Model.Albums)
{
    <div>@album.Title</div>
}
@Html.ActionLink("Add Album", "New", "Albums", null, new { @class = "btn btn-primary" })

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ArtistId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
